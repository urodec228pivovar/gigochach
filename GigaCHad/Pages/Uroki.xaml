<Page x:Class="GigaCHad.Pages.Uroki"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GigaCHad.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Uroki">

    <Grid>
        <DataGrid HorizontalAlignment="Left"
                  Height="450"
                  VerticalAlignment="Top"
                  Width="800">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Группа"
                                    Width="*" />
                <DataGridTextColumn Header="Урок"
                                    Width="*" />
                <DataGridTextColumn Header="Понедельник"
                                    Width="*" />
                <DataGridTextColumn Header="Вторник"
                                    Width="*" />
                <DataGridTextColumn Header="Среда"
                                    Width="*" />
                <DataGridTextColumn Header="Четверг"
                                    Width="*" />
                <DataGridTextColumn Header="Пятница"
                                    Width="*" />
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>
